#!/bin/bash
# SOAR ADS-B Proxy Provisioning Script
#
# This script provisions an ADS-B proxy server for SOAR by:
# - Creating the soar user and group
# - Installing socat package
# - Installing Tailscale
# - Installing and enabling the adsblol-firehose-proxy service
#
# Usage:
#   sudo ./provision-adsb

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Check if running as root
if [[ $EUID -ne 0 ]]; then
   echo -e "${RED}Error: This script must be run as root (use sudo)${NC}"
   exit 1
fi

echo -e "${GREEN}Provisioning SOAR ADS-B proxy...${NC}"

# Detect OS
if [ -f /etc/os-release ]; then
    . /etc/os-release
    OS=$ID
else
    echo -e "${RED}Error: Cannot detect OS. /etc/os-release not found.${NC}"
    exit 1
fi

echo -e "${BLUE}Detected OS: $OS${NC}"

# Check if OS is Debian or Ubuntu
if [[ "$OS" != "ubuntu" ]] && [[ "$OS" != "debian" ]]; then
    echo -e "${RED}Error: This script only supports Debian and Ubuntu.${NC}"
    exit 1
fi

# Create soar user if it doesn't exist
if ! id "soar" &>/dev/null; then
    echo -e "${BLUE}Creating 'soar' system user...${NC}"
    useradd --system --user-group --create-home --home-dir /home/soar --shell /bin/bash soar
    echo -e "${GREEN}'soar' user created successfully${NC}"
else
    echo -e "${BLUE}'soar' user already exists${NC}"
fi

# Install socat if not already installed
if ! command -v socat &> /dev/null; then
    echo -e "${BLUE}Installing socat...${NC}"
    apt-get update
    apt-get install -y socat
    echo -e "${GREEN}socat installed successfully${NC}"
else
    echo -e "${BLUE}socat is already installed${NC}"
fi

# Install Tailscale if not already installed
if ! command -v tailscale &> /dev/null; then
    echo -e "${BLUE}Installing Tailscale...${NC}"
    curl -fsSL https://tailscale.com/install.sh | sh
    echo -e "${GREEN}Tailscale installed successfully${NC}"
    echo -e "${YELLOW}Run 'sudo tailscale up' to connect to your tailnet${NC}"
else
    echo -e "${BLUE}Tailscale is already installed${NC}"

    # Check if Tailscale is connected
    if tailscale status &> /dev/null; then
        echo -e "${GREEN}Tailscale is connected${NC}"
        TAILSCALE_IP=$(tailscale ip -4 2>/dev/null || echo "unknown")
        echo -e "${BLUE}This machine's Tailscale IP: $TAILSCALE_IP${NC}"
    else
        echo -e "${YELLOW}Tailscale is not connected. Run 'sudo tailscale up'${NC}"
    fi
fi

# Install adsblol-firehose-proxy service
if [ -f infrastructure/adsblol-firehose-proxy.service ]; then
    echo -e "${BLUE}Installing adsblol-firehose-proxy service...${NC}"
    install -m 644 -o root -g root infrastructure/adsblol-firehose-proxy.service /etc/systemd/system/
    systemctl daemon-reload
    systemctl enable adsblol-firehose-proxy.service
    systemctl start adsblol-firehose-proxy.service
    echo -e "${GREEN}adsblol-firehose-proxy service installed and started${NC}"
else
    echo -e "${RED}Error: infrastructure/adsblol-firehose-proxy.service not found${NC}"
    echo -e "${YELLOW}Please run this script from the soar repository root${NC}"
    exit 1
fi

echo -e "${GREEN}SOAR ADS-B proxy provisioning complete!${NC}"
echo
echo -e "${BLUE}Service Status:${NC}"
systemctl status adsblol-firehose-proxy.service --no-pager

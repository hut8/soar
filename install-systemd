#!/bin/bash
# SOAR Systemd Installation Script
#
# This script installs and configures all SOAR systemd services and target.
#
# Usage:
#   sudo ./install-systemd.sh

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if running as root
if [[ $EUID -ne 0 ]]; then
   echo -e "${RED}Error: This script must be run as root (use sudo)${NC}"
   exit 1
fi

echo -e "${GREEN}Installing SOAR systemd configuration...${NC}"

# Copy service files
echo "Copying service files..."
cp soar.target /etc/systemd/system/
cp soar-run.service /etc/systemd/system/
cp soar-web.service /etc/systemd/system/
cp soar-pull-data.service /etc/systemd/system/
cp soar-pull-data.timer /etc/systemd/system/

# Reload systemd daemon
echo "Reloading systemd daemon..."
systemctl daemon-reload

# Enable services
echo "Enabling services..."
systemctl enable soar.target
systemctl enable soar-run.service
systemctl enable soar-web.service
systemctl enable soar-pull-data.timer

echo -e "${GREEN}Installation complete!${NC}"
echo
echo -e "${YELLOW}Usage:${NC}"
echo "  sudo systemctl start soar       # Start all SOAR services"
echo "  sudo systemctl stop soar        # Stop all SOAR services"
echo "  sudo systemctl restart soar     # Restart all SOAR services"
echo "  sudo systemctl status soar      # Check status of all SOAR services"
echo
echo -e "${YELLOW}Individual service control:${NC}"
echo "  sudo systemctl start soar-web.service"
echo "  sudo systemctl stop soar-run.service"
echo "  sudo systemctl restart soar-pull-data.timer"
echo
echo -e "${YELLOW}Check logs:${NC}"
echo "  sudo journalctl -u soar-run.service -f"
echo "  sudo journalctl -u soar-web.service -f"
echo "  sudo journalctl -u soar-pull-data.service -f"
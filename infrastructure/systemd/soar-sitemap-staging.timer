# SOAR Sitemap Generation Timer (Staging)
#
# This systemd timer automatically runs the `soar sitemap` command once daily at 4:00 AM,
# after the pull-data service completes (which runs at 3:00 AM).
# It generates XML sitemap files for Google and Bing SEO optimization.
#
# Installation:
#   sudo cp soar-sitemap-staging.service soar-sitemap-staging.timer /etc/systemd/system/
#   sudo systemctl daemon-reload
#   sudo systemctl enable soar-sitemap-staging.timer
#   sudo systemctl start soar-sitemap-staging.timer
#
# Check status:
#   sudo systemctl status soar-sitemap-staging.timer
#   sudo systemctl list-timers soar-sitemap-staging.timer
#
# Manual execution:
#   sudo systemctl start soar-sitemap-staging.service
#
# View logs:
#   sudo journalctl -u soar-sitemap-staging.service -f

[Unit]
Description=SOAR Sitemap Generation Timer (Staging) - Run Daily After Data Import
Requires=soar-sitemap-staging.service

[Timer]
# Run daily at 4:00 AM local time (1 hour after pull-data completes)
OnCalendar=*-*-* 04:00:00

# If the system was down when the timer should have triggered, run it as soon as possible
Persistent=yes

# Add some randomization to avoid server load spikes
RandomizedDelaySec=180

# Ensure the service isn't triggered more than once per day even if the system time changes
AccuracySec=30min

[Install]
WantedBy=timers.target soar.target
